@inproceedings{10.1145/3653666.3656099,
author = {Hogan, Emma and Mir, Darakhshan and Cencini, Andrew and O'Hara, Keith and Soosai Raj, Adalbert Gerald and Griswold, William and Porter, Leo},
title = {Re-Instatement of Pell Grants for Incarcerated Students: Implications for CS Education},
