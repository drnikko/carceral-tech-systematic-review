@inproceedings{10.1145/3491101.3516382,
author = {Abebe, Veronica and Amaryan, Gagik and Beshai, Marina and Ilene and Gurgen, Ali Ekin and Ho, Wendy and Hylton, Naaji R. and Kim, Daniel and Lee, Christy and Lewandowski, Carina and Miller, Katherine T. and Moore, Lindsey A. and Sylwester, Rachel and Thai, Ethan and Tucker, Frelicia N. and Webb, Toussaint and Zhao, Dorothy and Zhao, Haicheng Charles and Vertesi, Janet},
