keywords = {Explainable AI, Mapping, Participatory Methods, Smart city, Transparency, Visualization},
location = {Pittsburgh, PA, USA},
series = {DIS '23 Companion}
}

@inproceedings{10.1145/3532106.3533492,
author = {Bosley, Brooke and Harrington, Christina N. and Morris, Susana M. and Le Dantec, Christopher A.},
title = {Healing Justice: A Framework for Collective Healing and Well-Being from Systemic Traumas},
year = {2022},
isbn = {9781450393584},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3532106.3533492},
doi = {10.1145/3532106.3533492},
